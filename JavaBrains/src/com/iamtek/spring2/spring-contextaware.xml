<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="triangle" class="com.iamtek.spring2.contextaware.Triangle"/>

    <bean id="pointZero" class="com.iamtek.spring2.contextaware.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="point2" class="com.iamtek.spring2.contextaware.Point" scope="prototype">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="point3" class="com.iamtek.spring2.contextaware.Point" scope="prototype">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

</beans>



