<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <aop:aspectj-autoproxy/>

    <context:component-scan base-package="com.iamtek.customadvice"/>

    <bean name="circle" class="com.iamtek.customadvice.Circle">
        <property name="name" value="Circle name"/>
    </bean>

    <bean name="triangle" class="com.iamtek.customadvice.Triangle">
        <property name="name" value="Triangle name"/>
    </bean>

    <bean name="shapeService" class="com.iamtek.customadvice.ShapeService" autowire="byName"/>

</beans>