<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

    <bean id="triangle" name="NameOfTriangle!" class="com.iamtek.spring1.innerbean.Triangle">
        <property name="pointA">
            <!--<ref bean="[zero]"/>-->
            <ref local="pointZero"/>
        </property>
        <property name="pointB">
            <bean class="com.iamtek.spring1.innerbean.Point">
                <property name="x" value="-25"/>
                <property name="y" value="0"/>
            </bean>
        </property>
        <property name="pointC">
            <bean class="com.iamtek.spring1.innerbean.Point">
                <property name="x" value="0"/>
                <property name="y" value="25"/>
            </bean>
        </property>
    </bean>

    <bean id="pointZero" class="com.iamtek.spring1.innerbean.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <alias name="triangle" alias="[Alias Of Triangle!]"/>
    <alias name="pointZero" alias="[zero]"/>

</beans>

